---
interface Props {
    title: string;
    subtitle?: string;
    description?: string;
    cover?: string;
    align?: "start" | "center";
}

const { align = "start", description, title, subtitle, cover } = Astro.props;
---

<div class:list={["", align]}>
    <div class="relative">
        {cover && <img src={cover} alt={title || ""} class="" />}
        <h1 class="text-lg">{title}</h1>
        <h2 class="text-2xl">{subtitle}</h2>
        {
            description && (
                <p class="tagline prose  text-xl bg-blue-500 p-2 leading-relaxed ">
                    {description}
                </p>
            )
        }
    </div>
    <slot />
</div>

<style></style>
